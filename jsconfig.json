{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "path": {
    "/@/*": [
      "src/*"
    ]
  },
  "exclude": [
    "assets",
    "dist",
    "build",
    "public"
  ]
}